<% provide(:title, '登録ページ') %>
<h1>登録画面</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :ユーザー名（必須） %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :パスワード（必須） %>
      <%= f.text_field :password, class: 'form-control' %>
      
      <%= f.label :パスワード確認（必須）, "パスワード確認（必須）" %>
      <%= f.text_field :password_confirmation, class: 'form-control' %>
      
      <%= f.label :活動地域（未入力可） %>
      <%= f.text_field :Activity_area, class: 'form-control' %>
      
      <%= f.label :好きな銃（未入力可） %>
      <%= f.text_field :like_weapon, class: 'form-control' %>
      
      <%= f.file_field :image %>
      
      <%= f.submit "ユーザー登録", class: "btn btn-primary" %>
      <h2>登録した内容はあとで変更が可能です</h2>
    <% end %>
  </div>
</div>