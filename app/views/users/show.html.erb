<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user.image? %>
        <%= image_tag @user.image.url %>
      <% end %> 
        <h1>ユーザー：<%= @user.name %></h1>
        <h1>活動地域：<%= @user.activity_area %></h1>
        <h1>好きな銃：<%= @user.like_weapon %></h1>
    </section>
  </aside>
</div>